pipeline{
  
  agent any 
  
  stages{
    stage("build"){
      steps{
        echo 'building the applcation .....'
      }
    }
    stage("test"){
      steps{
        echo 'testing the applcation .....'
      }
    }
    stage("deploy"){
      steps{
        echo 'deploying the applcation .....'
      }
    }  
  }
}
